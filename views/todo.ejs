<!-- lets us embed JavaScript code in a template language that is then used to generate HTML -->

<!DOCTYPE html>
<head>
  <title>Todo App</title>
  <link rel="stylesheet" href="/static/style.css" type="text/css" />
  <link
    href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
    crossorigin="anonymous"
  />
</head>
<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="content" required>
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list"> <!--The Overall List-->
        <% todoTasks.forEach(details => { %>
        <li class="todo-list-item"> <!--Once Task Is Added-->
        <div class="todo-list-item-name"><%= details.content %></div>
        <a href="/edit/<%= details._id %>" class="edit"> <!--Switing Task To Be Able To Edit-->
        <span class="fas fa-edit"></span>
        </a>
        <a href="/remove/<%= details._id %>" class="remove">
        <span class="fas fa-times"></span>
        </a>
        </li>
        <% }) %>
        </ul>
    </div>
  </div>
</body>
